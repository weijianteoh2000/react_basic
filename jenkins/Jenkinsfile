pipeline {
    agent any
    tools {nodejs 'NODEJS'}
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                bat 'npm install'
                bat 'npm run build'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deliver') {
            steps {
                bat 'chmod -R +rwx ./scripts/deliver.sh'
                bat 'chmod -R +rwx ./scripts/kill.sh'
                bat './scripts/deliver.sh'
                input message: 'Finished using the web site? (Click "Proceed" to continue)'
                bat './scripts/kill.sh'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}